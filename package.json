{
  "name": "@big3/ai-agent-sdk",
  "version": "0.1.0",
  "description": "AI Agent SDK for multi-model orchestration with real-time communication",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup && tsx scripts/copy-package-json.ts",
    "dev": "tsx src/main.ts",
    "dev:all": "make dev-all",
    "dev:backend": "cd backend && encore run",
    "dev:frontend": "cd frontend && pnpm run dev",
    "test": "vitest",
    "modernize:analyze": "tsx src/modernize/cli.ts",
    "coverage": "vitest --coverage",
    "lint": "eslint src --fix",
    "lint-check": "eslint src",
    "typecheck": "tsc -b tsconfig.json",
    "clean": "rm -rf dist",
    "visualize-stream": "tsx cli/stream-visualizer.ts",
    "prepare": "husky",
    "setup": "make quickstart",
    "start": "make dev-all",
    "redis": "make redis-start"
  },
  "keywords": [
    "ai",
    "agent",
    "sdk",
    "orchestration",
    "workflow",
    "automation"
  ],
  "author": "Big3",
  "license": "MIT",
  "dependencies": {
    "@langchain/langgraph": "^1.0.2",
    "effect": "^3.0.0",
    "encore.dev": "^1.51.11",
    "ws": "^8.18.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@biomejs/biome": "2.3.7",
    "@effect/vitest": "^0.27.0",
    "@eslint/js": "^9.39.1",
    "@google/generative-ai": "^0.24.1",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^4.0.13",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "lefthook": "^2.0.4",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.10.1",
    "playwright": "^1.56.1",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.48.0",
    "ultracite": "6.3.6",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/big3/ai-agent-sdk"
  },
  "bugs": {
    "url": "https://github.com/big3/ai-agent-sdk/issues"
  },
  "homepage": "https://github.com/big3/ai-agent-sdk#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
